<h1>Our blog</h1>
<% @posts.each do |post| %>
<h1><%= link_to post.title, post %></h1>
<h2><%= post.content %></h2>
<p>
	<%= link_to "Edit" , edit_post_path(post)%>
    <%= link_to "Destroy", post_path(post) , :confirm => "Are You Sure?", :method =>:destroy %>
</p>
<hr/>
<%end%>
<p><%= link_to "Add a New Post", new_post_path %> </p>